<!-- //////////////  ITERATING OVER THE FONTS   ///////////////// -->

<!-- <h1 style="color:blue">This is a Blue Heading</h1> -->
<% now = Date.today %>
<% jan_1_1 = Date.new(2015,1,1) %>
<% dayes = (jan_1_1..Date.new(2015,3,3)).to_a %>
<% sorted_dayes = dayes.sort {|x,y| y <=> x } %>

<% date_font_hash = dayes.zip(Day.load_fonts).to_h %>

<% date_font_hash.each do |single_day, font| %>
  <div class="day1" style="font-family:<%= font %>">&</div>
  <div class="dayoftheweek"><%= single_day.strftime('%A').upcase %></div>
  <div class="date"><%= single_day.strftime('%-d') %></div>
  <div class="monyear"><%= single_day.strftime('%B, %Y') %></div><br> 
  <hr width="50%">
<% end %>

