<div><h1>Listing Days</h1></div>

<table>
  <thead>
    <tr>
      <th>Ampersand</th>
      <th>Weekday</th>
      <th>Date</th>
      <th>Month</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.ampersand %></td>
        <td><%= day.weekday %></td>
        <td><%= day.date %></td>
        <td><%= day.month %></td>
        <td><%= day.year %></td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

